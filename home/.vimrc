filetype plugin indent on
syntax on

set autoread
set backspace=indent,eol,start
set encoding=utf-8
set expandtab
set fileencoding=utf-8
set fileencodings=utf-8
set fileformats=unix,dos,mac
set hidden
set hlsearch
set ignorecase
set incsearch
set number
set ruler
set scrolloff=10
set shiftwidth=4
set shortmess=acFItWTo
set smartcase
set softtabstop=0
set tabstop=4
set ttyfast
set wildmenu
